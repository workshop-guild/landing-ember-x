<div class="page">
  <h1>Login</h1>
  <form {{action 'authenticate' on='submit'}}>
    <div class="form-group has-feedback">
      <label class="control-label" for="identification">Email</label>
      {{input class='form-control' placeholder='Email' value=identification}}
      <span class="glyphicon glyphicon-remove form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
      <label class="control-label" for="password">Password</label>
      {{input class='form-control' placeholder='Password' type='password' value=password}}
      <span class="glyphicon glyphicon-remove form-control-feedback"></span>
    </div>
    <button class="btn btn-primary" type="submit">Login</button>
    {{link-to 'Register' 'register' class='btn btn-link' }}
  </form>
</div>