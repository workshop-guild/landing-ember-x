<form class="profile-edit-form">
  <div class="form-group">
    <label class="control-label" for="avatar">Avatar</label>
    <div>
      <span><img {{bind-attr src=avatarURL}} alt=""></span>
      <span>
        <button class="btn btn-default" {{action "uploadImage"}}>Upload image</button>
      </span>
    </div>
  </div>
  <div class="form-group has-feedback">
    <label class="control-label" for="username">Username</label>
    <div class="input-group">
      <span class="input-group-addon">@</span>
      {{input class='form-control' placeholder='Username' value=username}}
    </div>
    <span class="glyphicon glyphicon-remove form-control-feedback"></span>
  </div>
  <div class="form-group has-feedback">
    <label class="control-label" for="firstname">First Name</label>
    {{input class='form-control' placeholder='First Name' value=firstname}}
    <span class="glyphicon glyphicon-remove form-control-feedback"></span>
  </div>
  <div class="form-group has-feedback">
    <label class="control-label" for="firstname">Last Name</label>
    {{input class='form-control' placeholder='Last Name' value=lastname}}
    <span class="glyphicon glyphicon-remove form-control-feedback"></span>
  </div>
  <div class="form-group has-feedback">
    <label class="control-label" for="firstname">Company role</label>
    {{input class='form-control' placeholder='Company role' value=role}}
    <span class="glyphicon glyphicon-remove form-control-feedback"></span>
  </div>
  <div class="row">
    <div class="form-group has-feedback col-md-6">
      <label class="control-label" for="firstname">
        Profile (uses <a href="http://softwaremaniacs.org/playground/showdown-highlight/" target="_blank">
          Markdown
          <i class="fa fa-question-circle"></i>
        </a>)
      </label>
      {{textarea class="form-control col-md-6" rows="10" value=profile}}
    </div>
    <div class="col-md-6">
      <label for="">Preview</label>
      <div class="well">
        {{format-markdown profile}}
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <button class="btn btn-primary" {{action "updateProfile"}}>Update profile</button>
</form>